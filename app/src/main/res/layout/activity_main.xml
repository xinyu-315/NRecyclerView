<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:onClick="gotoNRecyclerViewActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NRecycleView"
            android:textColor="@color/colorPrimary"/>
        <Button
            android:onClick="gotoNPullScrollViewActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NPullScrollView"
            android:textColor="@color/colorPrimary"/>
        <Button
            android:onClick="gotoNPullWebViewActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NPullWebView"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>


</ScrollView>
